<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">

            <solid android:color="#00FFFFFF" />

            <stroke
                android:color="#000000"
            android:width="2dp" />
        </shape>
    </item>


    <item android:state_pressed="true">
        <shape android:shape="rectangle">

            <solid android:color="#00DDDDDD" />

            <stroke
                android:color="#000000"
            android:width="0dp" />
        </shape>
    </item>
</selector>

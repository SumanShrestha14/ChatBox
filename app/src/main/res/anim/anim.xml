<!-- res/anim/slow_scale_up.xml -->
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Translate (move) the views upward by 10dp -->
    <translate
        android:fromYDelta="10dp"
        android:toYDelta="0"
        android:duration="5000" /> <!-- 5-second duration -->

    <!-- Scale animation for the text view -->
    <scale
        android:fromXScale="1.0"
        android:toXScale="1.0"
        android:fromYScale="1.0"
        android:toYScale="1.0"
        android:pivotX="50%"
        android:pivotY="50%"
        android:duration="5000" />

    <!-- Scale animation for the image view -->
    <scale
        android:fromXScale="1.0"
        android:toXScale="1.0"
        android:fromYScale="1.0"
        android:toYScale="1.0"
        android:pivotX="50%"
        android:pivotY="50%"
        android:duration="5000" />
</set>
